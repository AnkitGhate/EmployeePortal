<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_margin="8dp"
    android:background="@color/black_900"
    android:gravity="center"
    android:orientation="vertical">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/jostlight"
        android:text="09:17"
        android:textColor="@color/dark_default_color_on_surface"
        android:textSize="35sp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/jostbold"
        android:text="@string/home_average_in_time_title"
        android:maxLines="1"
        android:textColor="@color/subtitle_text_color"
        android:textSize="15sp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:fontFamily="@font/jostlight"
        android:text="08:23"
        android:textColor="@color/dark_default_color_on_surface"
        android:textSize="35sp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/jostbold"
        android:text="@string/home_actual_work_hour_title"
        android:maxLines="1"
        android:textColor="@color/subtitle_text_color"
        android:textSize="15sp" />

</LinearLayout>
