<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="@dimen/padding_16"
    android:layout_weight="1">

    <RelativeLayout
        android:id="@+id/news_item_container"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingBottom="5dp">

        <TextView
            android:id="@+id/news_body_textview"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/dark_default_color_on_surface"
            android:textSize="15sp" />

        <TextView
            android:id="@+id/news_date_tv"
            android:layout_width="70dp"
            android:layout_height="wrap_content"
            android:layout_below="@+id/news_body_textview"
            android:layout_marginTop="5dp"
            android:background="@color/dark_default_color_on_surface" />

        <TextView
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:layout_alignBaseline="@id/news_date_tv"
            android:layout_alignParentEnd="true"
            android:background="@color/dark_default_color_on_surface" />

    </RelativeLayout>
</com.google.android.material.card.MaterialCardView>
