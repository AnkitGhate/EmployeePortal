<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/news_item_container"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="?android:attr/selectableItemBackground">

    <TextView
        android:id="@+id/news_body_textview"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:includeFontPadding="false"
        android:maxLines="2"
        android:textAppearance="@style/TextAppearance.Body2"
        tools:text="@string/placeholder_text_for_lists" />

    <TextView
        android:id="@+id/news_date_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/news_body_textview"
        android:layout_marginTop="5dp"
        android:fontFamily="@font/jostlight"
        android:letterSpacing="0.1"
        android:textColor="@color/subtitle_text_color"
        android:textSize="14sp"
        tools:text="2nd June 2020" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@id/news_date_tv"
        android:layout_alignParentEnd="true"
        android:fontFamily="@font/jostlight"
        android:letterSpacing="0.1"
        android:text="Read more.."
        android:textColor="@color/subtitle_text_color"
        android:textSize="14sp" />
</RelativeLayout>
